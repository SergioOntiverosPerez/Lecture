@{
    ViewBag.Title = "Evaluations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="counter"></h2>

<p>
    <a id="newEvaluation" onclick="NewEvaluation()" class="btn btn-primary">Create New Evaluation</a>
</p>

<input type="text" id="searchEval" onkeyup="SearchEvaluationsByStudent()" placeholder="Search for names..." class="form-control-sm" />

<table id="evaluationTable" class="table table-hover">
    <thead>
        <tr class="header">
            <th scope="col">Student</th>
            <th scope="col">Test</th>
            <th scope="col">Score</th>
            <th scope="col">Group</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="evaluations">
    </tbody>
</table>

@section Scripts
{
    <script type="text/javascript">getEvaluations();</script>
}