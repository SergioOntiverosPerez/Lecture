@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="counter"></h2>

<p>
    <a id="newStudent" onclick="NewStudent()" class="btn btn-primary">Create New Student</a>
</p>

<input type="text" id="search" onkeyup="SearchStudent()" placeholder="Search for names..." class="form-control-sm"/>


<table id="studentsTable" class="table table-hover">
    <thead>
        <tr class="header">
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">E-mail</th>
            <th scope="col">Course</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="students">
    </tbody>
</table>

@section Scripts
{
    <script type="text/javascript">getStudents();</script>
}