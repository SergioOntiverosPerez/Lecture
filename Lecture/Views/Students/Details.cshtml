@model Lecture.Models.Student
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<div>
    <h4>Student @ViewBag.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Name)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(m => m.Name)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Surname)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(m => m.Surname)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.CourseId)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(m => m.Course.Name)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Email)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(m => m.Email)
        </dt>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
